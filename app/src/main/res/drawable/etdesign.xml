<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="2dp" android:top="15dp">
                <shape>
                    <corners android:radius="30dp"/>

                    <solid android:color="#D6D6D6" />
                    <gradient
                        android:endColor="#D6D6D6" android:startColor="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/white" android:startColor="@color/white" />
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="30dp"/>

                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:centerX="50%"
                        android:centerY="100%"
                        android:gradientRadius="215dp"
                        android:centerColor="#00FF0000"
                        android:endColor="#6B000000"
                        android:startColor="#00FF0000" />
                    <corners android:radius="30dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="200"
                        android:centerColor="#00FF0000"
                        android:centerY=".05"
                        android:endColor="#00FF0000"
                        android:startColor="#6B000000" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>



