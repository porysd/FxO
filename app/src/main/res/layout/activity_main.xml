<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.FxO"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="219dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_bold"
        android:shadowColor="#E8E7E7"
        android:shadowDx="0.1"
        android:shadowDy="0.1"
        android:shadowRadius="5"
        android:text="ECLIPSE"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197" />

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="220dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/josefin_sans_bold"
        android:letterSpacing=".1"
        android:text="Unlock Your Potential."
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.342"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645" />

    <Button
        android:id="@+id/buttonGetStarted"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:text="GET STARTED"
        android:textColor="#FFFFFF"
        android:textColorLink="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/gsbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="232dp"
        android:layout_height="97dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/varela_round"
        android:text="Create assessments, build flashcards, and master your subjects."
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.797" />

</androidx.constraintlayout.widget.ConstraintLayout>